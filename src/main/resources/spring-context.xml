<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="inputOutput" class="ru.otus.spring.ssh.hw.dao.InputOutputConsoleImpl">
	</bean>
	<bean id="user" class="ru.otus.spring.ssh.hw.domain.User">
		<constructor-arg name="inputOutput" ref="inputOutput"/>
	</bean>
	<bean id="questionDao" class="ru.otus.spring.ssh.hw.dao.QuestionDaoImpl">
	</bean>
	<bean id="questionService" class="ru.otus.spring.ssh.hw.service.RandomQuestionService">
		<constructor-arg name="questionDao" ref="questionDao"/>
	</bean>
	<bean id="testService" class="ru.otus.spring.ssh.hw.service.TestService">
		<constructor-arg name="inputOutput" ref="inputOutput"/>
		<constructor-arg name="user" ref="user"/>
		<constructor-arg name="questionService" ref="questionService"/>
	</bean>
</beans>
